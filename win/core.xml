<project name="core-win">
	<import>
		<url url="${SCRIPTS_BASE}/core.xml" />
	</import>

	<macrodef name="run">
		<attribute name="exec" />
		<attribute name="dir" default="${basedir}" />
		<sequential>
			<exec executable="cmd" failonerror="true" dir="@{dir}">
				<arg value="/c" />
				<arg value="@{exec}" />
			</exec>
		</sequential>
	</macrodef>
	
	<macrodef name="sudo">
		<attribute name="exec" />
		<attribute name="dir" default="${basedir}" />
		<sequential>
			<run exec="@{exec}" dir="@{dir}"/>
		</sequential>
	</macrodef>
</project>